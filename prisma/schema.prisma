// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Course {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  code    String @unique
  title   String
  year    Int
  credits Float
  creditType String

  faculty     String
  department  String
  description String

  prerequisites String[] @default([])

  notes Note[]
  terms Term[]

  @@map("courses")
}

enum Semester {
  fall
  winter
  summer
}

type Term {
  term        Semester
  instructors String[]
}

type Note {
  content String
  links   Link[]
}

type Link {
  href String
  text String
}

// VSB

model Vsb {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  year Int
  semester Semester

  code String
  blocks VSBBlock[]
  combos Json

  @@map("vsb")
  @@unique([code, year, semester])
}

type VSBBlock {
  type String
  display String
  teachers String[]
  locations String[]
  section String
  crn String
  campus String
  remainingSeats Int
  waitlistRem Int
  waitlistCap Int
  schedule VSBTime[]
}

type VSBTime {
  day String
  t1 Int
  t2 Int
}
